---
import GitHub from "../icons/GitHub.astro"
import TypeScript from "../icons/TypeScript.astro"
import React from "../icons/React.astro"
import Tailwind from "../icons/Tailwind.astro"
import Link from "../icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  TypeScript: {
    name: "TypeScript.js",
    class: "bg-[#3178C6] text-white",
    icon: TypeScript,
  },
  React: {
    name: "React.js",
    class: "bg-[##1A1A1A] text-white border border-slate-100",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Control de Gastos ContextApi",
    description:
      "Proyecto Control de Gasto Semanal. Puede registrar los gastos semanales la aplicacion te dara el total de gastos, el saldo disponible y el total ingresado. Este proyecto se realizo con ReactJs, TypeScript, TailwindCss para los estilos, useReducer, ContextApi para los estados globales",
    link: "https://fastidious-griffin-5df05d.netlify.app/",
    github: "https://github.com/ProgramacionMatias/Control-de-Gastos",
    image: "public/project/contadorGastos.jpg",
    tags: [TAGS.TypeScript, TAGS.TAILWIND, TAGS.React],
  },
  {
    title: "GuitarLa",
    description:
      "Simulando un carrito de compras en el Front End. Este proyecto se realizo con ReactJs, TypeScript, TailwindCss para los estilos, useReducer.",
    link: "https://delightful-haupia-9bdac7.netlify.app/",
    github: "https://github.com/ProgramacionMatias/Guitarla-TypeScript",
    image: "public/project/Guitarla.jpg",
    tags: [TAGS.TypeScript, TAGS.TAILWIND, TAGS.React],
  },
]
---

<div  class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="imagen project" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-yellow-200 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-white dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>